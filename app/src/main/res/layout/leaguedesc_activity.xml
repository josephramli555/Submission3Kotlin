<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/leaguedesc_mainview">
<ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ProgressBar
                android:id="@+id/leaguedesc_progbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"/>
        <ImageView
                android:id="@+id/leaguedesc_imgdetail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
        />
        <TextView
                android:id="@+id/leaguedesc_header"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:id="@+id/leaguedesc_desc"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"/>
                    <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:id="@+id/leaguedesc_btnprevmatch"
                    android:text="Prev Match"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:layout_weight="2"/>

            <Button
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="16sp"
                    android:id="@+id/leaguedesc_btnnextmatch"
                    android:text="Next Match"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:layout_weight="2"
                    android:layout_marginRight="0dp"/>

    </LinearLayout>




</ScrollView>
</android.support.constraint.ConstraintLayout>